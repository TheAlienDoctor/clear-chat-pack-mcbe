{
	"namespace": "hud",
	//---------------------------------------------------------------------------
	// Hud Screen
	//---------------------------------------------------------------------------
	// Displays player's position in the form "Position: 0, 0, 0", as well as "Agent Pos: 0, 0, 0" if an owned agent is present
	"player_position": {
		"type": "image",
		"size": [
			"100%c + 6px",
			"100%c + 2px"
		],
		"texture": "textures/ui/Black",
		"alpha": 0.0, //Remove background from position
		"controls": [
			{
				"player_position_text": {
					"type": "label",
					"anchor_from": "bottom_middle",
					"anchor_to": "bottom_middle",
					"layer": 1,
					"enable_profanity_filter": false,
					"color": "$chat_text_color",
					"text": "#text",
					"shadow": true,
					"bindings": [
						{
							"binding_name": "#player_position_text",
							"binding_name_override": "#text",
							"binding_condition": "always_when_visible",
							"binding_type": "global"
						}
					]
				}
			}
		],
		"bindings": [
			{
				"binding_name": "#player_position_visible",
				"binding_name_override": "#visible",
				"binding_condition": "always",
				"binding_type": "global"
			}
		]
	},
	"anim_chat_bg_alpha": {
		"anim_type": "alpha",
		"easing": "in_quart",
		"destroy_at_end": "chat_grid_item",
		"duration": 1,
		"from": 0.0, //Remove background from chat fade out animation
		"to": 0
	},
	"chat_grid_item": {
		"type": "panel",
		"layer": 1,
		"size": [
			"100%-2px",
			"100%c"
		],
		"anchor_from": "top_left",
		"anchor_to": "top_left",
		"controls": [
			{
				"chat_background": {
					"type": "image",
					"texture": "textures/ui/Black",
					"alpha": 0.0, //Remove background from chat itself
					"size": [
						"100%",
						"100%c"
					],
					"anims": [
						"@hud.anim_chat_bg_wait"
					],
					"controls": [
						{
							"chat_text@chat_label": {
								"anchor_from": "top_left",
								"anchor_to": "top_left",
								"offset": [
									2,
									0
								]
							}
						}
					]
				}
			}
		]
	}
}